import {
    Button,
    HorizontalBox,
    ListView,
    Palette,
    ScrollView,
    Slider,
    Switch,
    VerticalBox,
} from "std-widgets.slint";

export component MainWindow inherits Window {
    width: 300px;
    height: 160px;

    in-out property<string> media_id;
    in-out property<string> status;

    VerticalLayout {
        spacing: 12px;
        padding: 16px;

        TextInput {
            // placeholder-text: "Media ID";
            accessible-placeholder-text: "Media ID";
            text <=> media_id;
        }

        Button {
            text: "Play Media";
            clicked => {
                play_requested("sample-id");
            }
        }

        Text {
            text: status;
        }
    }


    callback play_requested(string);
}
